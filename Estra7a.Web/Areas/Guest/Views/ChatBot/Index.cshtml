@{
    ViewBag.Title = "ChatBot";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: white;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .page-wrapper {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 30px 20px;
        background: white;
    }

    .chat-container {
        max-width: 1200px;
        width: 100%;
        height: 85vh;
        min-height: 600px;
        max-height: 850px;
        background: white;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        border: 1px solid #e5e7eb;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(40px) scale(0.95);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .chat-header {
        background: linear-gradient(135deg, #436e62 0%, #5a8f7f 100%);
        color: white;
        padding: 28px 35px;
        display: flex;
        align-items: center;
        gap: 18px;
        box-shadow: 0 4px 20px rgba(67, 110, 98, 0.2);
        flex-shrink: 0;
        position: relative;
        overflow: hidden;
    }

        .chat-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.5), transparent);
            animation: shimmer 3s infinite;
        }

    @@keyframes shimmer {
        0% {
            transform: translateX(-100%);
        }

        100% {
            transform: translateX(100%);
        }
    }

    .bot-avatar {
        width: 56px;
        height: 56px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
        }

        50% {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(67, 110, 98, 0.3);
        }
    }

    .header-info h2 {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 5px;
        letter-spacing: -0.5px;
    }

    .header-info p {
        font-size: 14px;
        opacity: 0.95;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .status-indicator {
        width: 8px;
        height: 8px;
        background: #4ade80;
        border-radius: 50%;
        display: inline-block;
        animation: blink 2s infinite;
        box-shadow: 0 0 10px #4ade80;
    }

    @@keyframes blink {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.5;
        }
    }

    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 35px;
        background: white;
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

        .chat-messages::-webkit-scrollbar {
            width: 12px;
        }

        .chat-messages::-webkit-scrollbar-track {
            background: #f1f3f5;
            border-radius: 10px;
            margin: 10px 0;
        }

        .chat-messages::-webkit-scrollbar-thumb {
            background: linear-gradient(180deg, #436e62 0%, #5a8f7f 100%);
            border-radius: 10px;
            border: 3px solid #f1f3f5;
        }

            .chat-messages::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(180deg, #395c52 0%, #4d7b6c 100%);
            }

    .message {
        display: flex;
        align-items: flex-start;
        gap: 14px;
        animation: messageSlide 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @@keyframes messageSlide {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .message.user {
        flex-direction: row-reverse;
    }

    .message-avatar {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
        flex-shrink: 0;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }

    .message.bot .message-avatar {
        background: linear-gradient(135deg, #436e62 0%, #5a8f7f 100%);
        color: white;
    }

    .message.user .message-avatar {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        color: white;
    }

    .message-content {
        max-width: 65%;
        padding: 16px 22px;
        border-radius: 20px;
        word-wrap: break-word;
        line-height: 1.6;
        font-size: 15px;
        position: relative;
    }

    .message.user .message-content {
        background: linear-gradient(135deg, #436e62 0%, #5a8f7f 100%);
        color: white;
        border-bottom-right-radius: 6px;
        box-shadow: 0 4px 15px rgba(67, 110, 98, 0.25);
    }

    .message.bot .message-content {
        background: #f9fafb;
        color: #1f2937;
        border: 1px solid #e5e7eb;
        border-bottom-left-radius: 6px;
        box-shadow: 0 3px 12px rgba(0, 0, 0, 0.06);
    }

    .timestamp {
        font-size: 11px;
        opacity: 0.75;
        margin-top: 8px;
        display: block;
        font-weight: 500;
    }

    .chat-input {
        display: flex;
        padding: 28px 35px;
        gap: 16px;
        background: white;
        border-top: 2px solid #e8eaed;
        align-items: center;
        flex-shrink: 0;
        box-shadow: 0 -5px 20px rgba(0, 0, 0, 0.03);
    }

        .chat-input input {
            flex: 1;
            padding: 16px 24px;
            border: 2px solid #e5e7eb;
            border-radius: 30px;
            outline: none;
            font-size: 15px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f9fafb;
        }

            .chat-input input:focus {
                border-color: #436e62;
                background: white;
                box-shadow: 0 0 0 4px rgba(67, 110, 98, 0.08);
            }

            .chat-input input::placeholder {
                color: #9ca3af;
            }

        .chat-input button {
            padding: 16px 36px;
            background: linear-gradient(135deg, #436e62 0%, #5a8f7f 100%);
            color: white;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            font-size: 15px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 16px rgba(67, 110, 98, 0.3);
            position: relative;
            overflow: hidden;
        }

            .chat-input button::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 0;
                height: 0;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.2);
                transform: translate(-50%, -50%);
                transition: width 0.6s, height 0.6s;
            }

            .chat-input button:hover::before {
                width: 300px;
                height: 300px;
            }

            .chat-input button:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 24px rgba(67, 110, 98, 0.4);
            }

            .chat-input button:active {
                transform: translateY(0);
            }

            .chat-input button:disabled {
                background: linear-gradient(135deg, #d1d5db 0%, #9ca3af 100%);
                cursor: not-allowed;
                transform: none;
                box-shadow: none;
            }

    .typing-indicator {
        padding: 16px 22px;
        background: #f9fafb;
        border: 1px solid #e5e7eb;
        border-radius: 20px;
        border-bottom-left-radius: 6px;
        display: inline-flex;
        gap: 6px;
        align-items: center;
        box-shadow: 0 3px 12px rgba(0, 0, 0, 0.06);
    }

        .typing-indicator span {
            width: 10px;
            height: 10px;
            background: #436e62;
            border-radius: 50%;
            animation: bounce 1.4s infinite ease-in-out;
        }

            .typing-indicator span:nth-child(1) {
                animation-delay: 0s;
            }

            .typing-indicator span:nth-child(2) {
                animation-delay: 0.2s;
            }

            .typing-indicator span:nth-child(3) {
                animation-delay: 0.4s;
            }

    @@keyframes bounce {
        0%, 60%, 100% {
            transform: translateY(0);
            opacity: 0.4;
        }

        30% {
            transform: translateY(-12px);
            opacity: 1;
        }
    }

    /* Responsive Design */
    @@media (max-width: 992px) {
        .chat-container {
            height: 80vh;
            min-height: 500px;
        }

        .message-content {
            max-width: 75%;
        }
    }

    @@media (max-width: 768px) {
        .page-wrapper {
            padding: 15px 10px;
        }

        .chat-container {
            height: 75vh;
            min-height: 450px;
            border-radius: 18px;
        }

        .chat-header {
            padding: 22px 20px;
        }

        .chat-messages {
            padding: 25px 18px;
            gap: 18px;
        }

        .message-content {
            max-width: 80%;
            font-size: 14px;
            padding: 14px 18px;
        }

        .chat-input {
            padding: 22px 18px;
            gap: 12px;
        }

            .chat-input input {
                font-size: 14px;
                padding: 14px 20px;
            }

            .chat-input button {
                padding: 14px 28px;
                font-size: 14px;
            }

        .bot-avatar {
            width: 48px;
            height: 48px;
            font-size: 26px;
        }

        .message-avatar {
            width: 38px;
            height: 38px;
            font-size: 20px;
        }
    }

    @@media (max-width: 576px) {
        .page-wrapper {
            padding: 10px 5px;
        }

        .chat-container {
            border-radius: 12px;
            height: 70vh;
        }

        .header-info h2 {
            font-size: 20px;
        }

        .header-info p {
            font-size: 13px;
        }

        .chat-messages {
            padding: 20px 15px;
        }

        .message-content {
            max-width: 85%;
        }
    }
</style>

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<div class="page-wrapper">
    <div class="chat-container">
        <div class="chat-header">
            <div class="bot-avatar">🤖</div>
            <div class="header-info">
                <h2>@Localizer["AI Assistant"]</h2>
                <p><span class="status-indicator"></span> @Localizer["Online"]</p>
            </div>
        </div>
        <div class="chat-messages" id="chatMessages">
            <div class="message bot">
                <div class="message-avatar">🤖</div>
                <div class="message-content">
                    @Localizer["Hello"]
                    <span class="timestamp">@Localizer["Just now"]</span>
                </div>
            </div>
        </div>
        <div class="chat-input">
            <input type="text" id="messageInput" placeholder="@Localizer["message"]" />
            <button id="sendButton">@Localizer["Send"]</button>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        var chatMessages = $('#chatMessages');
        var messageInput = $('#messageInput');
        var sendButton = $('#sendButton');

        function getCurrentTime() {
            var now = new Date();
            return now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
        }

        function addMessage(content, isUser) {
            var messageClass = isUser ? 'user' : 'bot';
            var avatar = isUser ? '👤' : '🤖';
            var time = getCurrentTime();

            var messageHtml = '<div class="message ' + messageClass + '">' +
                              '<div class="message-avatar">' + avatar + '</div>' +
                              '<div class="message-content">' +
                              content +
                              '<span class="timestamp">' + time + '</span>' +
                              '</div>' +
                              '</div>';
            chatMessages.append(messageHtml);
            chatMessages.scrollTop(chatMessages[0].scrollHeight);
        }

        function showTypingIndicator() {
            var typingHtml = '<div class="message bot typing-message">' +
                            '<div class="message-avatar">🤖</div>' +
                            '<div class="typing-indicator">' +
                            '<span></span><span></span><span></span>' +
                            '</div></div>';
            chatMessages.append(typingHtml);
            chatMessages.scrollTop(chatMessages[0].scrollHeight);
        }

        function removeTypingIndicator() {
            $('.typing-message').remove();
        }

        function sendMessage() {
            var message = messageInput.val().trim();
            if (message === '') return;

            addMessage(message, true);
            messageInput.val('');
            sendButton.prop('disabled', true);
            showTypingIndicator();

            $.ajax({
                url: '@Url.Action("SendMessage" , "ChatBot")',
                type: 'POST',
                data: { message: message },
                success: function(response) {
                    removeTypingIndicator();
                    if (response.success) {
                        addMessage(response.reply, false);
                    } else {
                        addMessage('⚠ Error: ' + response.error, false);
                    }
                    sendButton.prop('disabled', false);
                    messageInput.focus();
                },
                error: function() {
                    removeTypingIndicator();
                    addMessage('⚠ Error: Could not connect to server', false);
                    sendButton.prop('disabled', false);
                    messageInput.focus();
                }
            });
        }

        sendButton.click(function() {
            sendMessage();
        });

        messageInput.keypress(function(e) {
            if (e.which === 13) {
                sendMessage();
            }
        });

        messageInput.focus();
    });
</script>
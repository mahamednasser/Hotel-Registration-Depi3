@{
}
@model Estra7a.Services.DTO.BookingDto
@using Estra7a.Web
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<div class="col-md-4 ftco-animate fadeInUp ftco-animated">
    <div class="block-7">
        <img src="/RoomImages/@Model.RoomImageUrl" style="width:100%; height:250px; object-fit:cover;" />

       

        <div class="text-center p-4">
            <span class="excerpt d-block">@Model.RoomName</span>
            <span class="price"><sup>$</sup> <span class="number text-">@Model.TotalPrice</span> </span>
            <span>@Model.room_count : @Localizer["Rooms"]</span>
            <ul class="pricing-text mb-5">
                <li><b>@Localizer["CheckIn"]:</b>@Model.CheckIn.ToShortDateString()</li>
                <li><b>@Localizer["CheckOut"] :</b>@Model.CheckOut.ToShortDateString()</li>
                <li><b>@Localizer["BookingDate"] : </b>@Model.BookingDate</li>
            </ul>
            @if(!(Model.CheckIn<DateTime.Now))
            {
                <form asp-action="CancelBooking" asp-controller="Booking" asp-area="Guest" method="post">
                    <input type="hidden" name="bookingId" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger px-2 py-3">
                        @Localizer["Cancel"]
                    </button>
                </form>
            }           
        </div>
    </div>
</div>
<style>
    body {
        margin-top: 20px;
    }

    .block-7 {
        border-radius: 4px;
        margin-bottom: 30px;
        padding: 0;
        overflow: hidden;
        background: #fff;
        -webkit-box-shadow: 0px 24px 48px -13px rgba(0, 0, 0, 0.05);
        -moz-box-shadow: 0px 24px 48px -13px rgba(0, 0, 0, 0.05);
        box-shadow: 0px 24px 48px -13px rgba(0, 0, 0, 0.05);
        -moz-transition: all 0.3s ease;
        -o-transition: all 0.3s ease;
        -webkit-transition: all 0.3s ease;
        -ms-transition: all 0.3s ease;
        transition: all 0.3s ease;
    }

    .block-7 .img {
        height: 250px;
    }

    .block-7 .heading-2 {
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
    }

    .block-7 .price {
        margin: 0;
        padding: 0;
        display: block;
    }

        .block-7 .price sup {
            font-size: 24px;
            top: -1em;
            color: #b3b3b3;
        }

        .block-7 .price .number {
            font-size: 25px;
            font-weight: 600;
            color: #000000;
        }

    .block-7 .excerpt {
        margin-bottom: 0px;
        color: #00bd56;
        font-size: 16px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .block-7 .label2 {
        text-transform: uppercase;
    }

    .block-7 .pricing-text,
    .block-7 .pricing-text li {
        padding: 0;
        margin: 0;
    }

        .block-7 .pricing-text li {
            list-style: none;
            padding-top: 10px;
            padding-bottom: 10px;
            color: #000000;
        }

            .block-7 .pricing-text li:nth-child(odd) {
                background: rgba(0, 0, 0, 0.05);
            }

            .block-7 .pricing-text li span.fa {
                color: #207dff;
            }

    .block-7 .btn-danger {
        color: #fff;
        text-transform: uppercase;
        font-style: 13px;
        font-weight: 400px;
        letter-spacing: 1px;
        width: 90%;
        margin: 0 auto;
    }

            .block-7 .btn-danger:hover,
            .block-7 .btn-danger:focus {
            background: #00bd56 !important;
            color: #fff;
        }

    .block-7:hover,
    .block-7:focus {
        -webkit-box-shadow: 0px 24px 48px -13px rgba(0, 0, 0, 0.11);
        -moz-box-shadow: 0px 24px 48px -13px rgba(0, 0, 0, 0.11);
        box-shadow: 0px 24px 48px -13px rgba(0, 0, 0, 0.11);
    }
</style>
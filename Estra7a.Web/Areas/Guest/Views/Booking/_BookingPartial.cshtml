@{
}
@model Estra7a.Services.DTO.BookingDto
@using Estra7a.Web
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<div class="booking-list-item">
    <div class="booking-content">
        <img src="/RoomImages/@Model.RoomImageUrl" alt="@Model.RoomName" class="booking-image">

        <div class="booking-details">
            <h3 class="booking-name">@Model.RoomName</h3>
            <p class="booking-price"><sup>$</sup>@Model.TotalPrice</p>

            <div class="booking-info">
                <div class="info-item"><strong>@Localizer["Rooms"]:</strong> @Model.room_count</div>
                <div class="info-item"><strong>@Localizer["CheckIn"]:</strong> @Model.CheckIn.ToShortDateString()</div>
                <div class="info-item"><strong>@Localizer["CheckOut"]:</strong> @Model.CheckOut.ToShortDateString()</div>
                <div class="info-item"><strong>@Localizer["BookingDate"]:</strong> @Model.BookingDate</div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: white;
    }

    .booking-list-item {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 25px;
        background: #fff;
        margin-bottom: 20px;
        -webkit-box-shadow: 0px 24px 48px -13px rgba(0, 0, 0, 0.05);
        -moz-box-shadow: 0px 24px 48px -13px rgba(0, 0, 0, 0.05);
        box-shadow: 0px 24px 48px -13px rgba(0, 0, 0, 0.05);
        -moz-transition: all 0.3s ease;
        -o-transition: all 0.3s ease;
        -webkit-transition: all 0.3s ease;
        -ms-transition: all 0.3s ease;
        transition: all 0.3s ease;
    }

        .booking-list-item:hover {
            -webkit-box-shadow: 0px 24px 48px -13px rgba(0, 0, 0, 0.11);
            -moz-box-shadow: 0px 24px 48px -13px rgba(0, 0, 0, 0.11);
            box-shadow: 0px 24px 48px -13px rgba(0, 0, 0, 0.11);
        }

    .booking-content {
        display: flex;
        align-items: center;
        gap: 25px;
    }

    .booking-image {
        width: 200px;
        height: 140px;
        object-fit: cover;
        border-radius: 6px;
        flex-shrink: 0;
    }

    .booking-details {
        flex: 1;
    }

    .booking-name {
        color: #00bd56;
        margin: 0 0 10px 0;
        font-size: 18px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .booking-price {
        font-size: 28px;
        font-weight: 600;
        margin: 0 0 20px 0;
        color: #000000;
    }

        .booking-price sup {
            font-size: 18px;
            color: #b3b3b3;
        }

    .booking-info {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
        font-size: 14px;
    }

    .info-item {
        color: #000000;
        padding: 10px;
        background: rgba(0, 0, 0, 0.03);
        border-radius: 4px;
    }

        .info-item strong {
            color: #000000;
            margin-right: 5px;
        }

    @@media (max-width: 768px) {
        .booking-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .booking-image {
            width: 100%;
            height: 200px;
        }

        .booking-info {
            grid-template-columns: 1fr;
        }
    }
</style>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model EditRoomViewModel
@{
    ViewBag.Title = "Edit Room";
}


<form asp-action="Edit" asp-controller="Room" method="post" enctype="multipart/form-data">

    <div class="container my-5">
        <div class="row g-5">

            <!-- LEFT COLUMN -->
            <div class="col-lg-7 bg-white p-4 h-100 border rounded-3">

                <h4 class="mb-3">@Localizer["Room Information"]</h4>

                <!-- Room Name -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger d-block"></span>

                </div>

                <!-- Price + Area -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="PricePerNight" class="form-label"></label>
                        <div class="input-group mb-3">

                            <span class="input-group-text" id="le-addon">LE</span>

                            <input asp-for="PricePerNight"
                                   type="number"
                                   class="form-control"
                                   required
                                   placeholder="@Localizer["Enter Price"]"
                                   aria-describedby="le-addon" />

                        </div>
                        <span asp-validation-for="PricePerNight" class="text-danger d-block"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Area" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Area"
                                   type="number"
                                   class="form-control"
                                   required
                                   placeholder="@Localizer["Enter Area"]"
                                   aria-describedby="area-addon" />

                            <span class="input-group-text" id="area-addon">@Localizer["m²"]</span>
                        </div>
                        <span asp-validation-for="Area" class="text-danger d-block"></span>
                    </div>
                </div>

                <!-- Capacity + NumberOfRooms -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Capacity" class="form-label"></label>
                        @* <input asp-for="Capacity" type="number" class="form-control" required /> *@
                        <select asp-for="Capacity" class="form-select" required>
                            <option value="0">@Localizer["Select Room Capacity"]</option>
                            <option value="1">1 @Localizer["Guest"]</option>
                            <option value="2">2 @Localizer["Guests"]</option>
                            <option value="5">3 @Localizer["Guests"]</option>
                            <option value="4">4 @Localizer["Guests"]</option>
                            <option value="5">5+ @Localizer["Guests"]</option>
                        </select>
                        <span asp-validation-for="Capacity" class="text-danger d-block"></span>

                    </div>
                    <div class="col-md-6">
                        <label asp-for="NumberOfRooms" class="form-label"></label>
                        <input asp-for="NumberOfRooms" type="number" class="form-control" required />
                        <span asp-validation-for="NumberOfRooms" class="text-danger d-block"></span>

                    </div>
                </div>

                <!-- Room Type -->
                <div class="mb-4">
                    <label class="form-label">@Localizer["Room Type"]</label>

                    <div class="d-flex gap-2">

                        <!-- Select list -->
                        <select asp-for="RoomtypeId" asp-items="Model.RoomTypes" id="room-type" class="form-select" required>
                            <option value="">@Localizer["Select"]</option>
                        </select>

                        <!-- Add button -->
                        <button type="button"
                                class="btn btn-outline-primary w-25"
                                data-bs-toggle="modal"
                                data-bs-target="#addTypeModal">
                            <i class="bi bi-plus-lg"></i>
                            @Localizer["Add Type"]
                        </button>

                    </div>
                </div>

                <!-- Room Features -->
                <div class="mb-4">
                    <label class="form-label">@Localizer["Room Features"]</label>

                    <select asp-items="Model.RoomFeatures" name="RoomFeaturesIds"
                            class="form-select"
                            multiple data-multi-select
                            aria-label="Select Room Features"
                            style="height: 100px;">
                    </select>

                    <div class="form-text text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        @Localizer["Hold"] <strong>@Localizer["Ctrl"]</strong> @Localizer["(Windows) or"] <strong>@Localizer["Command"]</strong> @Localizer["(Mac) to select multiple features."]
                    </div>
                </div>

                <!-- Description -->
                <div class="mb-4">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>

                <!-- Upload Images -->
                <div class="mb-4">
                    <h4 class="mb-3">@Localizer["Upload Images"]</h4>

                    <label asp-for="NewCoverImage">@Localizer["Base Image"]</label>
                    <input asp-for="NewCoverImage" type="file" class="form-control" />
                    <span asp-validation-for="NewCoverImage" class="text-danger d-block"></span>
                    <label class="mt-3">@Localizer["Additional Images"]</label>
                    <input asp-for="NewAdditionalImages" type="file" multiple class="form-control" />
                </div>

            </div>

            <!-- RIGHT COLUMN (Existing Images + Delete Checkbox) -->
            <div class="col-lg-5">

                <div class="bg-white p-4 border rounded-3" style="border-color:#ecedf0; border-width:2px; min-height:300px;">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="h5 mb-0">@Localizer["Select Images to Delete"]</h4>
                    </div>

                    <div class="mb-4">

                        <!-- Base Image -->
                        <div class="list-group-item d-flex align-items-center p-3 border border-2 mb-2 rounded-3"
                             style="border-color:#e6e8ec; background-color:#f9fafb;">

                            <input class="form-check-input me-3" type="checkbox" asp-for="DeleteCover">

                            <label class="form-check-label d-flex align-items-center flex-grow-1" style="cursor: pointer;">
                                <img src="~/RoomImages/@Model.CurrentBaseImageName"
                                     class="img-thumbnail me-1 previewable"
                                     style="width:65px; height:65px; object-fit:cover;">


                                <div class="flex-grow-1">
                                    <div class="fw-bold">@Localizer["room-image"]</div>
                                    <small class="text-muted">@Localizer["Base Image"]</small>
                                    <div><span class="badge bg-primary">@Localizer["Cover"]</span></div>
                                </div>
                            </label>
                        </div>

                        <!-- Additional Images -->
                        @foreach ( var img in Model.CurrentAdditionalImages )
                        {
                            <div class="list-group-item d-flex align-items-center p-3 border border-2 mb-2 rounded-3"
                                 style="border-color:#e6e8ec; background-color:#f9fafb;">
                                <input class="form-check-input me-3"
                                       type="checkbox"
                                       name="AdditionalImagesToDelete"
                                       value="@img.Id" />

                                <label class="form-check-label d-flex align-items-center flex-grow-1" style="cursor:pointer;">
                                    <img src="~/RoomImages/@img.FileName"
                                         class="img-thumbnail me-1 previewable"
                                         style="width:65px; height:65px; object-fit:cover;">


                                    <div class="flex-grow-1">
                                        <div class="fw-bold">room-image</div>
                                        <small class="text-muted">@Localizer["Additional"]</small>
                                        <div><span class="badge bg-secondary">@Localizer["Img"]</span></div>
                                    </div>
                                </label>
                            </div>
                        }
                    </div>

                </div>
            </div>

        </div>

        <!-- SUBMIT BUTTON -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary w-50 mt-3">
                @Localizer["Save Changes"]
            </button>
        </div>

    </div>

</form>

<partial name="_AddRoomTypeModal" model="new AddRoomTypeViewModel()" />

<!-- IMAGE PREVIEW MODAL -->
<div class="modal fade" id="imagePreviewModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content bg-dark border-0">
            <div class="modal-body text-center p-0">
                <img id="previewImage" src="" class="img-fluid rounded">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://codeshack.io/web/demos/MultiSelect.js"></script>
    <script src="~/js/add-type-ajax.js"></script>
    <script src="~/js/image-edit-preview.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

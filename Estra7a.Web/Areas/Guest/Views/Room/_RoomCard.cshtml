@model RoomViewModel

<div class="col-xl-4 col-lg-6">
    <div class="room-card position-relative" data-id="@Model.Id">
        <!--why Model.RoomId  to remove that room from front after deteted from database -->
        <!-- position-relative للdropdown -->
        <div class="room-image">
            <img src="~/RoomImages/@Model.BaseImageUrl" alt="@Model.Name" class="img-fluid">
            <div class="room-features">
                <span class="feature-badge business">@Model.RoomTypeName</span>
            </div>
        </div>

        <!-- 3 points dropdown -->
        <div class="dropdown" style="position: absolute; top: 10px; right: 10px;">
            <button class="btn btn-sm btn-light" type="button" id="roomOptions@Model.RoomId" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-three-dots-vertical"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="roomOptions@Model.RoomId">
                <!-- Edit -->
                <li>
                    <a class="dropdown-item" asp-controller="Room" asp-action="Edit" asp-route-id="@Model.Id">
                        <i class="bi bi-pencil me-1"></i> Edit
                    </a>
                </li>
                <!-- Delete -->
                <li>
                    <a href="javascript:void(0);" class="dropdown-item delete-room-btn"
                       data-id="@Model.Id"
                       data-bs-toggle="modal"
                       data-bs-target="#deleteRoomModal">
                        <i class="bi bi-trash me-1"></i> Delete
                    </a>
                </li>
            </ul>
        </div>





        <div class="room-content">
            <div class="room-header">
                <h3>@Model.Name</h3>
                <div class="room-rating">
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-half"></i>
                </div>
            </div>
            @* <p class="room-description">@Model.Description</p> *@
            <div class="room-amenities">
                <span><i class="bi bi-people"></i> Up to @Model.Capacity guests</span>
                <span class="spec-item">
                    <i class="bi bi-rulers"></i>
                    <span>@Model.Area m²</span>
                </span>
                <span><i class="bi bi-house"></i>@Model.RoomTypeName</span>
            </div>
            <div class="room-footer">
                <div class="room-price">
                    <span class="price-from">From</span>
                    <span class="price-amount">$@Model.PricePerNight</span>
                    <span class="price-period">/ night</span>
                </div>
                <a asp-action="Details" asp-controller="Room" asp-route-id="@Model.Id" class="btn-room-details">View Details</a>
            </div>
        </div>
    </div>
</div>

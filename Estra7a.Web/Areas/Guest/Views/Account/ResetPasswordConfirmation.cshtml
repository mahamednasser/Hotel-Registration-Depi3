@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PasswordResetConfirmationTitle"];
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card reset-card p-4 text-center">

                <div class="card-body">
                    <i class="bi bi-check-circle fs-1 text-success mb-3"></i>
                    <h2 class="mb-3">@Localizer["PasswordResetSuccessHeader"]</h2>
                    <p class="text-muted mb-2">@Localizer["PasswordResetSuccessMessage"]</p>
                    <p class="text-muted mb-4">@Localizer["PasswordResetLoginMessage"]</p>
                    <a asp-action="Login" class="btn btn-primary w-100">@Localizer["GoToLoginButton"]</a>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }

    .reset-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .text-center i.fs-1 {
        font-size: 3rem;
    }
</style>

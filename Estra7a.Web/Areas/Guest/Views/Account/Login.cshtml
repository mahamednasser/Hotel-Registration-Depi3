@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@model LoginUserVM

<section class="bg-light p-3 p-md-4 p-xl-5" style="padding-bottom:60px;">
    <div class="container">
        <div class="row justify-content-center h-100">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm h-100">
                    <div class="row g-0 h-100">

                        <div class="col-12 col-md-6 d-none d-md-block">
                            <img class="img-fluid rounded-start w-100 h-100 object-fit-cover"
                                 loading="lazy"
                                 src="https://i.pinimg.com/736x/5d/43/e0/5d43e0ff7cb8bae7920c5d0ec4a9c5f3.jpg"
                                 alt="Hotel background">
                        </div>

                        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                            <div class="col-12 col-lg-11 col-xl-10">
                                <div class="card-body p-3 p-md-4 p-xl-5">

                                    <div class="text-center mb-3">
                                        <a href="#!">
                                            <img src="~/assets/img/Gray Beige Minimalist Real Estate Logo.png" alt="Logo" width="175" height="175">
                                        </a>
                                        <h4 class="mt-3">@Localizer["Welcome"]</h4>
                                    </div>

                                    <form asp-action="Login" method="post">
                                        <div class="row gy-3 overflow-hidden">

                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Username" class="form-control" id="email" placeholder="name@example.com" required>
                                                    <label for="email">@Localizer["Email"]</label>
                                                    <span asp-validation-for="Username" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password" required>
                                                    <label for="password">@Localizer["Password"]</label>
                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="remember_me">
                                                    <label class="form-check-label text-secondary" for="remember_me">
                                                        @Localizer["Keep"]
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-dark btn-lg">@Localizer["Log"]</button>
                                                </div>
                                            </div>

                                        </div>
                                    </form>

                                    <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-5">
                                        <a href="/Guest/Account/Register" class="link-secondary text-decoration-none">@Localizer["Newacc"]</a>
                                        <a href="/Guest/Account/ForgotPassword" class="link-secondary text-decoration-none">@Localizer["Forgot"]</a>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .card {
        margin-bottom: 20px;
    }
</style>

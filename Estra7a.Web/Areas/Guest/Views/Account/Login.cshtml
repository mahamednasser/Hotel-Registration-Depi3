@model LoginUserVM

<section class="bg-image"
         style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
                min-height: 100vh;">
    <div class="mask d-flex align-items-center justify-content-center gradient-custom-3 py-5">
        <div class="container">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card shadow-lg" style="border-radius: 20px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5 fw-bold">Login</h2>

                            <form asp-action="Login" method="post">
                                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                                <div class="form-outline mb-4">
                                    <label asp-for="Username" class="form-label fw-bold"></label>
                                    <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter your username" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label asp-for="Password" class="form-label fw-bold"></label>
                                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter your password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-check d-flex justify-content-center mb-4">
                                    <input class="form-check-input me-2" type="checkbox" id="form2Example3cg" asp-for="RememberMe" />
                                    <label class="form-check-label" for="form2Example3cg">
                                        Remember me
                                    </label>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-white fw-bold px-5">
                                        Login
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-4 mb-0">
                                    Don't have an account?
                                    <a href="/Guest/Account/Register" class="fw-bold text-success"><u>Sign up here</u></a>
                                </p>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .gradient-custom-3 {
        background: linear-gradient(to right, rgba(132, 250, 176, 0.6), rgba(143, 211, 244, 0.6));
    }

    .gradient-custom-4 {
        background: linear-gradient(to right, rgba(132, 250, 176, 1), rgba(143, 211, 244, 1));
    }

    .card {
        backdrop-filter: blur(10px);
        background-color: rgba(255, 255, 255, 0.9);
    }

    .form-label {
        font-size: 0.95rem;
        color: #333;
    }

    body {
        direction: ltr;
    }
</style>

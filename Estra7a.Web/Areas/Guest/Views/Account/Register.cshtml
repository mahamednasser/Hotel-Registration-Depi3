@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model RegisterUserVM

<section class="bg-light p-3 p-md-4 p-xl-5" style="padding-bottom:60px;">
    <div class="container">
        <div class="row justify-content-center h-100">
            <div class="col-12 col-xxl-11">

                <div class="card border-light-subtle shadow-sm h-100">
                    <div class="row g-0 h-100">

                        <div class="col-12 col-md-6 d-none d-md-block">
                            <img class="img-fluid rounded-start w-100 h-100 object-fit-cover"
                                 loading="lazy"
                                 src="https://i.pinimg.com/736x/5d/43/e0/5d43e0ff7cb8bae7920c5d0ec4a9c5f3.jpg"
                                 alt="Register background">
                        </div>

                        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                            <div class="col-12 col-lg-11 col-xl-10">
                                <div class="card-body p-3 p-md-4 p-xl-5">

                                    <div class="text-center mb-3">
                                        <a href="#!">
                                            <img src="~/assets/img/Gray Beige Minimalist Real Estate Logo.png"
                                                 alt="Logo" width="170" height="170">
                                        </a>
                                        <h4 class="mt-3">@Localizer["CreateAccount"]</h4>
                                    </div>

                                    <form asp-action="Register" method="post">
                                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="Name" class="form-control" placeholder="@Localizer["Username"]" />
                                            <label asp-for="Name">@Localizer["Username"]</label>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="Email" class="form-control" placeholder="@Localizer["Email"]" />
                                            <label asp-for="Email">@Localizer["Email"]</label>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="Password" type="password" class="form-control" placeholder="@Localizer["Password"]" />
                                            <label asp-for="Password">@Localizer["Password"]</label>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="ConfirmedPassword" type="password" class="form-control" placeholder="@Localizer["ConfirmPassword"]" />
                                            <label asp-for="ConfirmedPassword">@Localizer["ConfirmPassword"]</label>
                                            <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="Address" class="form-control" placeholder="@Localizer["Address"]" />
                                            <label asp-for="Address">@Localizer["Address"]</label>
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>

                                        <div class="form-check d-flex justify-content-center mb-4">
                                            <input class="form-check-input me-2" type="checkbox" id="form2Example3cg" />
                                            <label class="form-check-label" for="form2Example3cg">
                                                @Localizer["Terms"]
                                            </label>
                                        </div>

                                        <div class="d-grid mt-4">
                                            <button type="submit" class="btn btn-dark btn-lg">@Localizer["Register"]</button>
                                        </div>
                                    </form>

                                    <div class="text-center mt-4">
                                        <p class="text-muted mb-0">
                                            @Localizer["AlreadyHaveAccount"]
                                            <a href="/Guest/Account/Login" class="fw-bold text-dark"><u>@Localizer["LoginHere"]</u></a>
                                        </p>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<style>
    .card {
        margin-bottom: 20px;
    }
</style>

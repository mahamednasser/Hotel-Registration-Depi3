@model EditRoleVM

@{
    ViewData["Title"] = "Edit Role";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-sm border-0">
                <div class="card-body p-4">

                    <!-- Header -->
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-primary text-white d-inline-flex justify-content-center align-items-center me-3"
                             style="width:40px;height:40px;">
                            <i class="bi bi-pencil-square"></i>
                        </div>
                        <div>
                            <h4 class="mb-0 fw-bold">Edit Role</h4>
                            <small class="text-muted">Update role name and save changes</small>
                        </div>
                    </div>

                    <!-- Form -->
                    <form asp-action="EditRole" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="RoleName" class="form-label fw-semibold">Role Name</label>
                            <input asp-for="RoleName"
                                   class="form-control"
                                   placeholder="Enter role name"
                                   required />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="/Admin/AdminAccount/Roles" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check2 me-1"></i>Save
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>


<head>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>
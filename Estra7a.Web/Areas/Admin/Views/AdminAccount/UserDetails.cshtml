@model ApplicationUserVM

@{
    ViewBag.PageTitle = "User Management";
    ViewBag.CardTitle = "User Details";
}

<h2 class="mb-3">@ViewBag.CardTitle</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserList)
        {
            <tr>
                <td>@item.name</td>
                <td>@item.Email</td>
                <td>@item.City</td>
                <td>
                    @(item.LockoutEnd != null && item.LockoutEnd > DateTimeOffset.UtcNow
                                    ? "Locked"
                                    : "Active")
            </td>
            <td>
                @if (item.LockoutEnd != null && item.LockoutEnd > DateTimeOffset.UtcNow)
                    {
                        <form asp-action="UnlockUser" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="fas fa-unlock"></i> Unlock
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="LockUser" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-lock"></i> Lock
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@model ApplicationUserVM
@{
    ViewBag.PageTitle = "User Management";
    ViewBag.CardTitle = "User Details";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center gap-2">
            <div class="rounded-circle bg-primary text-white d-inline-flex justify-content-center align-items-center"
                 style="width:40px;height:40px;">
                <i class="bi bi-people-fill"></i>
            </div>
            <div>
                <h3 class="mb-0 fw-bold">@ViewBag.CardTitle</h3>
                <small class="text-muted">Manage users, status and roles</small>
            </div>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                            <th class="text-center">Roles</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.UserList)
                        {
                            var isLocked = item.LockoutEnd != null && item.LockoutEnd > DateTimeOffset.UtcNow;
                            <tr>
                                <td class="fw-semibold">@item.name</td>
                                <td>@item.Email</td>
                                <td>@item.City</td>
                                <td>
                                    <span class="badge @(isLocked ? "bg-danger" : "bg-success")">
                                        @(isLocked ? "Locked" : "Active")
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (isLocked)
                                    {
                                        <form asp-action="UnlockUser" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-outline-success btn-sm">
                                                <i class="bi bi-unlock me-1"></i>Unlock
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="LockUser" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-lock me-1"></i>Lock
                                            </button>
                                        </form>
                                    }
                                </td>
                                <td class="text-center">
                                    <button type="button"
                                            class="btn btn-primary btn-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#assignRolesModal-@item.Id">
                                        <i class="bi bi-shield-lock me-1"></i>Assign Roles
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade"
                                         id="assignRolesModal-@item.Id"
                                         tabindex="-1"
                                         aria-labelledby="assignRolesLabel-@item.Id"
                                         aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <form asp-action="AssignRole" method="post">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="assignRolesLabel-@item.Id">
                                                            Assign Roles to @item.name
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <input type="hidden" name="UserId" value="@item.Id" />
                                                        <div class="small text-muted mb-2">
                                                            Select one or more roles for this user.
                                                        </div>
                                                        <div class="row">
                                                            @foreach (var role in Model.RolesList)
                                                            {
                                                                var checkedAttr =
                                                                Model.UserRoles.ContainsKey(item.Id) &&
                                                                Model.UserRoles[item.Id].Contains(role.Name)
                                                                ? "checked" : "";
                                                                <div class="col-6 mb-2">
                                                                    <div class="form-check">
                                                                        <input class="form-check-input"
                                                                               type="checkbox"
                                                                               name="Roles[@role.Name]"
                                                                               value="true"
                                                                               @checkedAttr />
                                                                        <label class="form-check-label">
                                                                            @role.Name
                                                                        </label>
                                                                    </div>
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="submit" class="btn btn-success">
                                                            <i class="bi bi-check2 me-1"></i>Save Roles
                                                        </button>
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                            Close
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<head>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>
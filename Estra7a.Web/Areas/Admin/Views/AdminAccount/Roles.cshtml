@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<div class="container py-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <div class="rounded-circle bg-primary text-white d-inline-flex justify-content-center align-items-center"
                 style="width:48px;height:48px;">
                <i class="bi bi-people-fill fs-4"></i>
            </div>
            <div>
                <h3 class="mb-0 fw-bold">Roles</h3>
                <small class="text-muted">Manage application roles and permissions</small>
            </div>
        </div>

        <a asp-action="CreateRole"
           class="btn btn-create-role text-white d-flex align-items-center gap-2 px-4">
            <i class="bi bi-plus-lg"></i>
            <span>Create New Role</span>
        </a>
    </div>

    <!-- Table card -->
    <div class="card roles-card shadow-sm">
        <div class="table-responsive">
            <table class="table mb-0 align-middle roles-table">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Role Name</th>
                        <th scope="col" class="text-center" style="width:220px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var r in Model)
                        {
                            <tr>
                                <td class="role-name">@r.Name</td>
                                <td class="text-center">
                                    <a asp-action="EditRole"
                                       asp-route-roleId="@r.Id"
                                       class="btn btn-sm btn-edit me-2">
                                        <i class="bi bi-pencil-square me-1"></i> Edit
                                    </a>

                                    <form asp-action="DeleteRole"
                                          asp-route-roleId="@r.Id"
                                          method="post"
                                          class="d-inline">
                                        <button type="submit"
                                                class="btn btn-sm btn-delete"
                                                onclick="return confirm('Are you sure you want to delete this role?');">
                                            <i class="bi bi-trash-fill me-1"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="text-center text-muted py-4">
                                No roles found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
<head>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>
<style>
    /* Roles page styling */
    .roles-card {
        border-radius: 0.75rem;
        border: none;
    }

    .roles-table thead th {
        font-weight: 600;
        font-size: 0.95rem;
    }

    .roles-table tbody td {
        padding-top: 1rem;
        padding-bottom: 1rem;
        font-size: 0.95rem;
    }

    .role-name {
        font-weight: 600;
        color: #4169e1;
    }

    /* Buttons */
    .btn-edit {
        border-color: #4c6fff;
        color: #4c6fff;
        background-color: #eef2ff;
    }

        .btn-edit:hover {
            background-color: #4c6fff;
            color: #ffffff;
        }

    .btn-delete {
        border-color: #ff5b8a;
        color: #ff5b8a;
        background-color: #ffe5ef;
    }

        .btn-delete:hover {
            background-color: #ff5b8a;
            color: #ffffff;
        }

    /* Create button */
    .btn-create-role {
        background-color: #4c6fff;
        border-color: #4c6fff;
        box-shadow: 0 4px 10px rgba(76, 111, 255, 0.35);
    }

        .btn-create-role:hover {
            background-color: #3b55d9;
            border-color: #3b55d9;
        }

</style>
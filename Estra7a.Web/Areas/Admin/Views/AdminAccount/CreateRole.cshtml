@{
    ViewData["Title"] = "Create Role";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-sm border-0">
                <div class="card-body p-4">

                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-primary text-white d-inline-flex justify-content-center align-items-center me-3"
                             style="width:40px;height:40px;">
                            <i class="bi bi-shield-lock-fill"></i>
                        </div>
                        <div>
                            <h4 class="mb-0 fw-bold">Create Role</h4>
                            <small class="text-muted">Add a new role to the system</small>
                        </div>
                    </div>

                    <form asp-action="CreateRole" method="post">
                        <div class="mb-3">
                            <label for="roleName" class="form-label fw-semibold">Role Name</label>
                            <input type="text"
                                   id="roleName"
                                   name="roleName"
                                   class="form-control"
                                   placeholder="e.g. Administrator"
                                   required />
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="/Admin/AdminAccount/Roles" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-lg me-1"></i>Create
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
<head>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>